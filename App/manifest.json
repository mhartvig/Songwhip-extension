{
  "manifest_version": 2,
  "name": "Songwhip",
  "description": "Music links to every platform",
  "version": "0.0.1",
  "icons": {
    "32": "icons/songwhip-32x32.png"
  },

  "permissions": [
    "tabs"
  ],

  "page_action": {
    "show_matches": ["https://open.spotify.com/*"],
    "default_icon": {
      "32": "icons/songwhip-32x32.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  }
}